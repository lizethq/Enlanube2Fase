<?xml version="1.0" encoding="utf-8"?>

<templates>
    <t t-extend="mail.widget.Thread.Message">
        <t t-jquery=".o_mail_timestamp" t-operation="replace">
            <small class="o_mail_timestamp" t-att-title="message.getDate().format(dateFormat)"><t t-esc="message.getDate().format(dateFormat)"/> (<t t-esc="message.getTimeElapsed()"/>)</small>
        </t>
    </t>
</templates>  
